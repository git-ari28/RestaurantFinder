<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card" style="width: 18rem;">
            <img src="<%= restaurant.image %>" class="card-img-top" alt="<%= restaurant.name %>">
            <div class="card-body">
                <h5 class="card-title"><%= restaurant.name %></h5>
                <p class="card-text"><%= restaurant.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= restaurant.location %></li>
                <li class="list-group-item"><%= restaurant.price %></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-warning" href="/restaurants/<%= restaurant._id %>/edit">Edit</a>
                <form class="d-inline" action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <form action="/restaurants/<%= restaurant._id %>/reviews" method="post" class="mb-3 validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Write your Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <% for (let review of restaurant.reviews) { %>
            <div class="mb-3">
                <p><%= review.body %></p>
            </div>
        <% } %>
    </div>
</div>






















