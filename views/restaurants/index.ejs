<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center mb-4">All Restaurants</h1>
        <a href="/restaurants/new" class="btn btn-primary mb-3">Add New Restaurant</a>
    </div>
</div>
<div class="row">
    <% restaurants.forEach(restaurant => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="<%= restaurant.image %>" class="card-img-top" alt="<%= restaurant.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= restaurant.name %></h5>
                    <p class="card-text"><%= restaurant.location %></p>
                    <p class="card-text"><strong>Price:</strong> <%= restaurant.price %></p>
                    <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>





    
